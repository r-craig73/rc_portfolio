<div class="jumbotron">
  <h2>Welome to Ron Craig's Portfolio</h2>
</div>

<div class="container">
<% if @skills.any? %>
<div class="row">
  <div class="col-md-12">
  <h3>Here's a list of Ron's skills. Click on the links below to veiw the examples...</h3>
  <br>
  </div>
</div>

<% @skills.each do |skill| %>
<div class="row">
  <div class="col-md-12" align="center">
    <div class="thumbnail">
      <div class="caption">
        <h3><%= link_to skill.title, skill_path(skill) %></h3>
      </div>
    </div>
  </div>
</div>
<% end %>
<% else %>
  <h2>No skills to pay the bills...yet!</h2>
<% end %>
<h5>Admin: <%= link_to "Add a New Skill", new_skill_path %></h5>
<hr>
</div>

<div class="container">
  <h3>Click below to view Ron's Interests...</h3>
  <h4><%= link_to "Ron's Interests", interests_path %></h4>
</div>
